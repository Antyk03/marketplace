<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="myPU" transaction-type="RESOURCE_LOCAL">
        <!-- Attiva scansione automatica delle entity annotate -->
        <!--<exclude-unlisted-classes>false</exclude-unlisted-classes>-->
        <class>antyk03.marketplaceserver.modello.Utente</class>
        <class>antyk03.marketplaceserver.modello.DatiUtente</class>
        <class>antyk03.marketplaceserver.modello.Prodotto</class>
        <class>antyk03.marketplaceserver.modello.Ordine</class>
        <class>antyk03.marketplaceserver.modello.ProdottoOrdine</class>

        <properties>
            <!-- Questi verranno sovrascritti a runtime leggendo secrets.properties -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/mio_database"/>
            <property name="jakarta.persistence.jdbc.user" value="mio_app"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Hibernate specific -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
